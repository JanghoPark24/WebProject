<!-- 회원정보 상세조회 -->
	 <select id="viewMember" 
	 parameterType="String"
	 resultType="thelecture.model.MemberBean">
		select
		email,
		nickname,
		univ_name 
		from member
		where nickname = #{nickname}
		
	</select>  
	


</mapper>
