<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberns">
	<!-- email 중복검사 -->
	<select id="isdup_email" parameterType="String"	resultType="member">
		select * from member where Upper(email)= #{email}
	</select>
	
	<!-- nickname 중복검사 -->
	<select id="isdup_nickname" parameterType="String" resultType="member">
		select * from member where Upper(nickname)= #{nickname}
	</select>


	<!-- 회원저장 -->
	<insert id="member_join" parameterType="member">
		insert INTO
		member
		values(
		#{email},#{nickname},'서울대학교','C54F4493021DE0A059CF719A2DCE3D20941EFE9A625122715BADD0B76244F6DD','n',
		'master',
		'B6E0lnRevAWmKnASHCYY',
		0,null,sysdate,'unknown','unknown.jpg',''
		)
	</insert>
  
  
	<!-- 회원 목록 -->
	<select id="memberList" resultType="thelecture.model.MemberBean">
		select
		email as email,
		nickname as nickname,
		univ_name as univ_name
		from member
		order by email
		
	</select>
	
  
