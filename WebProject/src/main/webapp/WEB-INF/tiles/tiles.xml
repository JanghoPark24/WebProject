<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<!-- 타일즈 layout 설정 -->
<tiles-definitions>
	<definition name="main_tile" template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="navbar" value="/WEB-INF/views/common/navbar.jsp" />
		<put-attribute name="body" value="" />
		
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>
	
	<definition name="*/*/d" extends="board_detail">
		<put-attribute name="body" value="/WEB-INF/views/content/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	
	<definition name="*/*/*" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>
    
	<definition name="home" extends="main_tile">
		<put-attribute name="title" value="herere" />
		<put-attribute name="body" value="/WEB-INF/views/content/home.jsp" />
	</definition>	
	<definition name="tos" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/content/tos.jsp" />
	</definition>
	<definition name="join_form" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/member/join_form.jsp" />
	</definition>
	<definition name="join" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/member/join.jsp" />
	</definition>
	<definition name="reset_passwd" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/member/reset_passwd.jsp" />
	</definition>
	<definition name="login_form" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/member/login_form.jsp" />
	</definition>
	<definition name="privacy" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/content/privacy.jsp" />
	</definition>
	
	
	<definition name="service_profile" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/content/service_profile.jsp" />
	</definition>
	
	<definition name="board_detail" template="/WEB-INF/views/layout/layout_board.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="navbar" value="/WEB-INF/views/common/navbar.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="comment" value="/WEB-INF/views/common/comment.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>
	
	
	
	<definition name="reg_info" extends="main_tile">
		<put-attribute name="body" value="/WEB-INF/views/member/reg_info.jsp" />
	</definition>
	
	
	
</tiles-definitions>